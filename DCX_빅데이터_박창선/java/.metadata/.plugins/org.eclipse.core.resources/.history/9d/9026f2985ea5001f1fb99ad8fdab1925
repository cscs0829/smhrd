package srhrd;

public class Ex07_배열 {

	public static void main(String[] args) {
		
		
		// 배열 선언 및 생성
		// 자료형[] 배열이름 = new 자료형[배열의 크기];
		
		int num = 10; //초기화
		
		// 1. 배열 선언
		int[] intArray;
				
		// 2. 배열 생성
		intArray = new int[10]; //-1값 10 = 0~9
		
		// 배열의 주소값만 저장
		System.out.println(intArray);
		
		// 기본데이터타입 : int, boolean, short, long, double...
		// ==> 크기가 고정됨
		
		// 레퍼런스타입(new) : String, Scanner, Random... -> 크기가 고정x
		String name = new String("이주희");
		
		// 배열의 인덱스 값 접근 방법
		// 배열이름[인덱스 번호]
		System.out.println(intArray[0]);
		System.out.println(intArray[1]);
		System.out.println(intArray[2]);
		System.out.println(intArray[3]);
		System.out.println(intArray[4]);
	
		String str = null; //레퍼런스만 가능
		
		//값 넣기
		intArray[0] = 1;
		intArray[1] = 2;
		intArray[2] = 3;
		intArray[3] = 4;
		intArray[4] = 5;
		intArray[5] = 6;
		
		
		System.out.println(intArray[0]);
		System.out.println(intArray[1]);
		System.out.println(intArray[2]);
		System.out.println(intArray[3]);
		System.out.println(intArray[4]);
		System.out.println(intArray[5]);
	
		for(int i = 0; i < 10; i++) {
			System.out.println(intArray[i]);
			
		}
		
	}

}
