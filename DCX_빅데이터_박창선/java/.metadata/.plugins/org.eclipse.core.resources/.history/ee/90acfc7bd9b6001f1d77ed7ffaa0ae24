package model;

import java.util.Random;
import java.util.Scanner;

public class ART {

	Random rd = new Random();
	Scanner sc = new Scanner(System.in);
	
	public void ArtHard(String[] arrayArtHard) {
		try {
			arrayArtHard = new String[3];
			arrayArtHard[0] = ""
								+ "[1]김홍도\n"
								+ "[2]율곡 이이\n"
								+ "[3]김정희\n"
								+ "[4]신숙주\n 답 : ";
			
			arrayArtHard[1] = ""
								+ "[1] 고르바초프\n"
								+ "[2] 찰스 베비지\n"
								+ "[3] 알렉산더 플레밍\n"
								+ "[4] 조나스 소크\n 답 : ";
			
			arrayArtHard[2] = ""
								+ "[1] 제임스 조이스\n"
								+ "[2] 굴리엘모 마르코니\n"
								+ "[3] 엔리코 페르미\n"
								+ "[4] 블라디미르 쥐보르킨\n 답 : ";
			
			System.out.println("열쇠로 미술실을 열어보자");
			Thread.sleep(2000);
			System.out.println("철컥"); //자물쇠 여는소리
			Thread.sleep(2000);
			Thread.sleep(2000);
			System.out.println("들어가보자...."); //문여는 소리
			Thread.sleep(2000);
			Thread.sleep(2000);
			Thread.sleep(2000);
			System.out.println("들어가니 의자와 캔버스, 상자가 있다.");
			Thread.sleep(2000);
			System.out.println("의자에 앉아보자.");
			Thread.sleep(2000);
			System.out.println("의자에 앉으니 캔버스에 글자가 나온다");
			Thread.sleep(2000);
			System.out.println("캔버스에 그려져 있는 문제를 맞추시오.");
			Thread.sleep(2000);
			System.out.println("이번에도 문제를 풀면 똑같이 상자가 열리는 것 같다\n문제를 풀어보자");
			int num = rd.nextInt(3);
			System.out.print(arrayArtHard[num]);
			int answer = sc.nextInt();
			if(num == 0) {
				if(answer == 3) {
					System.out.println("상자 열리는 소리");
					System.out.println("상자 안에는 열쇠가 1개 들어있다. 열쇠를 모아서 교실문을 열면 될 것 같다.");
					
				
				} else {
					
					System.out.println("실패문구 + 효과음 +귀신나오기");
					
				}
			} else if (num == 1) {
				if(answer == 2) {
					System.out.println("상자 열리는 소리");
					System.out.println("상자 안에는 열쇠가 1개 들어있다. 열쇠를 모아서 교실문을 열면 될 것 같다.");
				
				
				} else {
					System.out.println("실패문구 + 효과음 +귀신나오기");
					
				}
			} else if (num == 2) {
				if(answer == 1) {
					System.out.println("상자 열리는 소리");
					System.out.println("상자 안에는 열쇠가 1개 들어있다. 열쇠를 모아서 교실문을 열면 될 것 같다.");
				
				
				} else {
					System.out.println("실패문구 + 효과음 +귀신나오기");
				}
			}
			
		} catch (InterruptedException e) {
			e.printStackTrace();
		}
		
	}
	
	// Easy 모드 과학실
	public void ArtEasy(String[] arrayArtEasy) { // 주소값만 가지고 있는 레퍼런스 변수
		try {
			arrayArtEasy = new String[3];
			arrayArtEasy[0] = ""
					+ "[1]부리부리몬\n"
					+ "[2]멧돼지왕자님\n"
					+ "[3]벌거벗은돼지용사\n"
					+ "[4]신짱구\n 답 : ";
			
			
			arrayArtEasy[1] = ""
					+ "[1] 냥냥이\n"
					+ "[2] 떼껄룩\n"
					+ "[3] 강아지\n"
					+ "[4] 도라에몽\n 답 : ";
			
			
			arrayArtEasy[2] = ""
					+ ""
					+  "[1] 시바견\n"
					+ "[2] 흰둥이\n"
					+ "[3] 호랑이\n"
					+ "[4] 검둥이\n 답 : ";
			
			System.out.println("열쇠로 미술실을 열어보자");
			Thread.sleep(2000);
			System.out.println("철컥"); //자물쇠 여는소리
			Thread.sleep(2000);
			System.out.println("들어가보자...."); //문여는 소리
			Thread.sleep(2000);
			System.out.println("들어가니 의자와 캔버스, 상자가 있다. \n의자에 앉아보자.");
			Thread.sleep(2000);
			System.out.println("의자에 앉으니 캔버스에 글자가 나온다");
			Thread.sleep(2000);
			System.out.println("캔버스에 그려져 있는 문제를 맞추시오.");
			Thread.sleep(2000);
			System.out.println("이번에도 문제를 풀면 똑같이 상자가 열리는 것 같다\n문제를 풀어보자");
			int num = rd.nextInt(3);
			System.out.print(arrayArtEasy[num]);
			int answer = sc.nextInt();
			if(num == 0) {
				if(answer == 1) {
					System.out.println("상자 열리는 소리");
					System.out.println("상자 안에는 열쇠가 1개 들어있다. 열쇠를 모아서 교실문을 열면 될 것 같다.");
					
				
				} else {
					System.out.println("실패문구 + 귀신나오기");
					
				}
			} else if (num == 1) {
				if(answer == 4) {
					System.out.println("상자 열리는 소리");
					System.out.println("상자 안에는 열쇠가 1개 들어있다. 열쇠를 모아서 교실문을 열면 될 것 같다.");
				
				
				} else {
					System.out.println("실패문구 +  효과음 +귀신나오기");
					
				}
			} else if (num == 2) {
				if(answer == 2) {
					System.out.println("상자 열리는 소리");
					System.out.println("상자 안에는 열쇠가 1개 들어있다. 열쇠를 모아서 교실문을 열면 될 것 같다.");
				
				
				} else {
					System.out.println("실패문구 +  효과음 +귀신나오기");
				}
			}
			
		} catch (InterruptedException e) {
			e.printStackTrace();
		}
		
	}
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
}
