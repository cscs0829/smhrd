package model;

import java.io.FileInputStream;
import java.io.InputStream;
import java.util.Random;



import java.util.Scanner;

import javazoom.jl.player.MP3Player;
import javazoom.jl.player.Player;

public class MusicRoom {

      Random rd = new Random();
      Scanner sc = new Scanner(System.in);
      MP3Player mp3 = new MP3Player();
      
      // Hard모드 과학실
      public boolean MusicHard() {
         boolean success = false;
         try {
            String[] arrayMusicHard = new String[3];
            arrayMusicHard[0] = "C:\\Users\\smhrd\\Desktop\\player\\음악리스트\\오늘도빛나는너에게.mp3";
            
            arrayMusicHard[1] = "C:\\Users\\smhrd\\Desktop\\player\\음악리스트\\사랑은늘도망가.mp3";
            
            arrayMusicHard[2] = "C:\\Users\\smhrd\\Desktop\\player\\음악리스트\\꽃.mp3";
            
            System.out.println("학교에 들어간다......");
            Thread.sleep(2000);
            System.out.println("교실문에 자물쇠가 4개나 달려있다. 열려있는 곳은 음악실뿐이다.");
            Thread.sleep(2000);
            System.out.println("과학실에 들어가니 교탁위에 상자가 열려있고 자물쇠로 잠겨있다. 앞에는 종이 한 장에 문제가 적혀있다."
                  + "아무래도 문제를 풀면 상자가 열리는 것 같다\n문제를 풀어보자");
            Thread.sleep(2000);
            
            int num = rd.nextInt(3);
            
            for (String muiscFile : arrayMusicHard) {
               mp3.play(muiscFile);
            }
            
            int answer = sc.nextInt();
            
            if(num == 0) {
               if(answer == 2) {
                  System.out.println("상자 열리는 소리");
                  System.out.println("상자 안에는 열쇠가 1개 들어있다. 열쇠를 모아서 교시문을 열면 될 것 같다.");
                  success = true;
               
               } else {
                  System.out.println("실패문구 + 귀신나오기");
                  
               }
            } else if (num == 1) {
               if(answer == 2) {
                  System.out.println("상자 열리는 소리");
                  System.out.println("상자 안에는 열쇠가 1개 들어있다. 열쇠를 모아서 교시문을 열면 될 것 같다.");
                  success = true;
               
               } else {
                  System.out.println("실패문구 + 귀신나오기");
                  
               }
            } else if (num == 2) {
               if(answer == 1) {
                  System.out.println("상자 열리는 소리");
                  System.out.println("상자 안에는 열쇠가 1개 들어있다. 열쇠를 모아서 교시문을 열면 될 것 같다.");
                  success = true;
               
               } else {
                  System.out.println("실패문구 + 귀신나오기");
               }
            }
            
         } catch (InterruptedException e) {
            e.printStackTrace();
         }
         return success;
         
      }
      
      // Easy 모드 과학실
      public boolean MusicEasy() { // 주소값만 가지고 있는 레퍼런스 변수
         boolean success = false;
         try {
            String[] arrayMusicEasy = new String[3];
            arrayMusicEasy[0] = "C:\\Users\\smhrd\\Desktop\\player\\음악리스트\\아로하.mp3";
