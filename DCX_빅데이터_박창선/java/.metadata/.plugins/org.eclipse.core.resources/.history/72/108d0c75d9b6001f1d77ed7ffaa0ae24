package controller;

import java.util.Scanner;


import model.GameDAO;
import model.SCIENCE;
import model.Computer;
import model.GameDTO;

public class GameCon {

	GameDAO dao = new GameDAO();
	SCIENCE sci = new SCIENCE();
	GameDTO dto = null;  
	Scanner sc = new Scanner(System.in);
	Computer com = new Computer();
	
	// 회원가입
		public void joinCon(String id, String pw, String name) {
			dto = new GameDTO(id, pw, name);
			int cnt = dao.join(dto);
			
			if(cnt == 1) {
				System.out.println(name + "님 환영합니다!");
			} else {
				System.out.println("다시 입력해주세요");
			}
		}
		
		// 로그인
		public void loginCon(String id, String pw, String[] arrayScience, String[] arraycomputer) {
			dto = new GameDTO(id, pw);
			
			boolean result = dao.login(dto);
			
			if(result) {
				System.out.println("로그인 성공");
				System.out.print("난이도를 선택하세요 [1] Easy [2] Hard >> ");
				int level = sc.nextInt();
				
				if(level == 1) {
					System.out.println("Easy 난이도를 선택하셨습니다... 게임을 시작합니다");
					sci.scienceEasy(arrayScience);
					com.scienceEasy(arraycomputer);
					
					
					
					
					
					
					
				} else if(level == 2) {
					System.out.println("Hard 난이도를 선택하셨습니다... 게임을 시작합니다");
						sci.scienceHard(arrayScience);
						com.scienceEasy(arraycomputer);
				} else {
					System.out.println("잘못입력하셨습니다");
				}
					
				
				} else {
					System.out.println("로그인 실패");
				}
			}
					
		}		
